<div class="container page-transition">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card auth-card">
        <div class="card-body">
          <div class="decorative-icon"><i class="fas fa-om"></i></div>
          <h2 class="mb-3">Login to श्लोक</h2>
          <% if (messages && messages.error) { %>
            <div class="alert alert-danger"><%= messages.error[0] %></div>
          <% } %>
          <% if (messages && messages.success) { %>
            <div class="alert alert-success"><%= messages.success[0] %></div>
          <% } %>
          <form method="POST" action="/login">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <button type="submit" class="btn btn-ancient">Login</button>
              <a href="/signup">Create an account</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
