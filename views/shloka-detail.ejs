<%- include('partials/header') %>

<div class="container page-transition">
  <div class="text-center mb-4">
    <h1><%= shloka.title %></h1>
    <p class="lead text-ancient-brown">Ancient wisdom from the scriptures</p>
  </div>

  <div class="wisdom-detail-card">
    <div class="card-body">
      <div class="sanskrit-verse mb-4">
        <h3>Sanskrit Verse</h3>
        <div class="verse-text"><%= shloka.verse %></div>
      </div>

      <div class="translation mb-4">
        <h3>Translation</h3>
        <p><%= shloka.translation %></p>
      </div>

      <div class="meaning mb-4">
        <h3>Meaning & Context</h3>
        <p><%= shloka.meaning %></p>
      </div>

      <% if (shloka.benefits) { %>
      <div class="benefits mb-4">
        <h3>Benefits</h3>
        <ul>
          <% shloka.benefits.forEach(benefit => { %>
            <li><%= benefit %></li>
          <% }); %>
        </ul>
      </div>
      <% } %>

      <% if (shloka.application) { %>
      <div class="application">
        <h3>Modern Application</h3>
        <p><%= shloka.application %></p>
      </div>
      <% } %>
    </div>
  </div>

  <div class="text-center mt-4">
    <a href="/ancient/shlokas" class="btn btn-ancient"><i class="fas fa-arrow-left me-2"></i>Back to Shlokas</a>
  </div>
</div>

<%- include('partials/footer') %>